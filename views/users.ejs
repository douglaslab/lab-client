<html>
  <head>
    <%= include partials/head.ejs %>
  </head>
  <body>
    <%= include partials/navbar.ejs %>
    <div class="page-header text-center">
      <h1>Users</h1>
    </div>

    <div class="container">
      <button type="button" class="btn btn-success" id="btnAdd">
        <span class="glyphicon glyphicon-plus"></span> Add User
      </button>
    </div>
    <div class="container">
      <table class="table table-bordered table-striped table-condensed">
        <tr>
          <th></th>
          <th>Name</th>
          <th>Email</th>
          <th>School</th>
          <th>Permission Level</th>
          <th>Created</th>
          <th>Modified</th>
          <th></th>
        </tr>
        <% for(var i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= users[i].name %></td>
          <td><%= users[i].email %></td>
          <td><%= users[i].school %></td>
          <td><%= users[i].permissionLevel %></td>
          <td><%= users[i].created %></td>
          <td><%= users[i].modified %></td>
          <td>
            <button type="button" class="btn btn-sm btn-default" data-edit="<%= i + 1 %>">
              <span class="glyphicon glyphicon-pencil"></span> Edit</button>&nbsp;
            <button type="button" class="btn btn-sm btn-danger" data-delete="<%= i + 1 %>">
              <span class="glyphicon glyphicon-trash"></span> Delete</button>
          </td>
        </tr>
        <% } %>
      </table>
    </div>

    <%= include partials/flash.ejs %>
    <%= include partials/userModal.ejs %>
    <%= include partials/scripts.ejs %>
    <script src="/js/users.js"></script>
  </body>
</html>
